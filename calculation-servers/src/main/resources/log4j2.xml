<Configuration status="debug">

  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="server: %d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
    </Console>

  </Appenders>
 
  <Loggers>
    <Root level="WARN">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>

 
</Configuration>